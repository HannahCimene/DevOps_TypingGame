<Window
    x:Class="TypingGame_DevOps.Gegevens"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TypingGame_DevOps"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Gegevens"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Margin="354,167,354,237" Text="Fill in your name:" />
        <TextBox
            Name="gegevensName"
            Width="300"
            Height="30"
            Margin="250,202,250,202"
            Background="#CCCC"
            BorderThickness="0" />
        <Button
            Width="180"
            Height="50"
            Margin="310,272,310,112"
            Background="Transparent"
            Click="Button_Click"
            Content="Play again"
            Cursor="Hand" />
    </Grid>
</Window>
